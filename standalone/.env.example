# Argus MCP Server - Standalone Configuration
# Copy to .env and customize

# Server
PORT=3000
HOST=0.0.0.0

# Argus Brain API (required)
ARGUS_BRAIN_URL=http://localhost:8000
API_TOKEN=

# Browser Pool (optional)
BROWSER_POOL_URL=
BROWSER_POOL_JWT_SECRET=

# Storage (MinIO/S3)
STORAGE_PROVIDER=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=argus-artifacts
MINIO_SECURE=false
MINIO_REGION=us-east-1

# Redis (for session state)
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=
CORS_ORIGINS=*

# Logging
LOG_LEVEL=info
